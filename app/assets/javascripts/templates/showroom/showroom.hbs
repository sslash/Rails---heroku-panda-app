<div class="jumbotron masthead showroom">
	<h1>The Showroom</h1>

	<div class="container marketing">
		<div class="row-fluid">
			<div class="span9">

				<div class="row-fluid w_border">
					<div class="span5">
						<img src="uploads/{{shredder.profileImagePath}}" class="img-medium thumbnail"/> 
					</div>
					<div class="span7">
						<h2>{{shredder.username}}</h2>

						<ul class="text-left">
							<li>{{gtrSize}} guitars</li>
							<li>{{eqSize}} equiptments</li>
						</ul>
					</div>
				</div>

				<div class="row-fluid">
					<h3>Guitars</h3>
					<div id="gtrCarousel" class="carousel slide">
						<ol class="carousel-indicators">
							{{#each shredder.guitars}}
								<li data-target="#myCarousel" data-slide-to="{{@index}}"></li>
							{{/each}}
						</ol>
						<!-- Carousel items -->
						<div class="carousel-inner">
							{{#each shredder.guitars}}
								<div class="item">
								<img src="uploads/{{this.file}}" alt="">
								<div class="carousel-caption">
									<h4>{{this.model}}</h4>
								</div>
							</div>
							{{/each}}
						</div>
						<!-- Carousel nav -->
						<a class="carousel-control left" href="#gtrCarousel" data-slide="prev">&lsaquo;</a>
						<a class="carousel-control right" href="#gtrCarousel" data-slide="next">&rsaquo;</a>
					</div>
				</div>

				<div class="row-fluid">
					<h3>Equiptment</h3>
					<div id="eqCarusel" class="carousel slide">
						<ol class="carousel-indicators">
							{{#each shredder.equiptment}}
								<li data-target="#myCarousel" data-slide-to="{{@index}}"></li>
							{{/each}}
						</ol>
						<!-- Carousel items -->
						<div class="carousel-inner">
							{{#each shredder.equiptment}}
								<div class="item">
								<img src="uploads/{{this.file}}" alt="">
								<div class="carousel-caption">
									<h4>{{this.model}}</h4>
								</div>
							</div>
							{{/each}}
						</div>
						<!-- Carousel nav -->
						<a class="carousel-control left" href="#eqCarusel" data-slide="prev">&lsaquo;</a>
						<a class="carousel-control right" href="#eqCarusel" data-slide="next">&rsaquo;</a>
					</div>
				</div>
			</div>


			<div class="span3 box">
				<input type="text" class="input-medium search-query searchSpace" placeholder="Search Shredder">

				{{#each shredders}}
				<div class="shredderList">
					<img src="uploads/{{this.profileImagePath}}" class="img-small thumbnail"/> 
					<a href="/#showroom/{{this.id}}">{{this.username}}</a>
				</div>
				{{/each}}
			</div>
		</div>
	</div>
</div>
