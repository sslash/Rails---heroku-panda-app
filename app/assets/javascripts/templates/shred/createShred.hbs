<div class="createShred">
	<div class="banner"><h1>Upload A New Shred</h1></div>

	<section class="content">
		<div class="row">
			<div class="col-lg-6 col-offset-6">
				<label class="error" style="display:none"></label>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6">
				<p class="lead" for="titleInput">Set Title</p>
			</div>
			<div class="col-lg-6">
				<input type="text" id="titleInput" autofocus>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-6">
				<p class="lead" for="descInput">Give it a short description</p>
			</div>
			<div class="col-lg-6">
				<input type="text" id="descInput">
			</div>
		</div>

		<div class="row">
			<div class="col-lg-6">
				<p class="lead">Upload Video</p>
			</div>
			<div class="col-lg-6">
				<input type="file" id="shredvideo">
			</div>
		</div>

		<div class="row">
			<div class="col-lg-6">
				<p class="lead">Add A backingtrack (optional)</p>
			</div>
			<div class="col-lg-6">
				<select id="backingTrackSelect">
				  <option>Pick One</option>
				  <option>Clapton Style Blues</option>
				  <option>Fusion Guthrie</option>
				  <option>Rock</option>
				  <option>Metal</option>
				</select>

				<label> Or Add Your Own</label>
				<input type="file"  id="jamTrack">
			</div>
		</div>

		<div class="row">
			<div class="col-lg-6">
				<p class="lead">Set Style</p>
			</div>
			<div class="col-lg-6">
				<select id="styleInput">
				  <option>Shred</option>
				  <option>Tutorial</option>
				  <option>Cover</option>
				  <option>Gear-Review</option>
				  <option>JamTrack</option>
				</select>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-6">
				<p class="lead" for="tagsInput">Add Tags</p>
			</div>
			<div class="col-lg-6">
				<input type="text" id="tagsInput">
			</div>
		</div>

		<div class="row">
			<div class="col-lg-6">
				<p class="lead" for="guitarInput">Guitar Used</p>
			</div>
			<div class="col-lg-6">
				<input type="text" id="guitarInput">
			</div>
		</div>
	</section>

	<section class="videoHandle">

		<div class="row">
			<div class="col-lg-4 col-offset-4">

				<div id="leVideo"></div>
				<div id="leAudio"></div>
			</div>
			<div class="col-lg-4 playbackControl">
				<div class="lePlay" style="display:none;">
					<button class="btn" id="playBtn">Play</button>
					<button class="btn" id="stopBtn">Stop</button>
					<button class="btn" id="rewindBtn">Rewind</button>

					<label style="display:block;">Synchronize Audio/Video</label>
					<input type="range" value = "0" id="syncRange" name="points" min="-5000" max="5000"> <label id="rangeVal">0 MS</label>
				</div>
			</div>
		</div>
	</section>

	<section id="createTabsArea">

		<div class="row">
			<div class="col-lg-1 arrows"><li class="icon-chevron-left icon-2x"></li></div>
			<div class="col-lg-10">

				<div class="row tabsArea">
					<img src="/assets/tabs.png">

					<div class="note-decorator">
						<ul>
							<li><img src="/assets/icons/notes/helnote.png" class="notes" id="semibreve"></li>
							<li><img src="/assets/icons/notes/halvnote.png"class="notes" id="minim"></li>
							<li><img src="/assets/icons/notes/firedels.png"class="notes selected" id="crotchet"></li>
							<li><img src="/assets/icons/notes/attedels.png"class="notes" id="quaver"></li>
							<li><img src="/assets/icons/notes/sekstendels.png"class="notes" id="semiquaver"></li>
							<li><img src="/assets/icons/notes/tretitodels.png"class="notes" id="demisemiquaver"></li>
							<li><img src="/assets/icons/notes/64dels.png"class="notes" id="hemidemisemiquaver"></li>
							<li class="icon-music icon-large"></li>=<span>120</span>
							<li><img src="/assets/icons/notes/hvilepause.png"class="notes"></li>
						</ul>
						<ul>
							<li><img src="/assets/icons/arrow.png" id="bendBtn"></li>
							<li><p>P.M</p></li>
						</ul>
					</div>
					<input type="text" id="tab-input" maxlength="2"></input>
				</div>

			</div>
			<div class="col-lg-1 arrows"><li class="icon-chevron-right icon-2x"></li> </div>
		</div>


		<div class="row">
			<div class="col-lg-6 col-offset-6">
				<button class="btn btn-large btn-success" id="publishBtn">Publish</button>
			</div>
		</div>
	</section>
</div>