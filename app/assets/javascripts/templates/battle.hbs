<div class="container battle">
	<div class="banner">
		<img src="assets/app/images/stage-4.jpg">
		<div class="battlers">					
			<div class="row-fluid">
				<div class="span5">
					<div class="photo">
						<img class="img-large-f" src="uploads/{{b.battler.profileImagePath}}"/>
						<img class="img-icon" src="assets/app/images/10.png"/>
						<h3 class="photo-label">{{b.battler.username}}</h3>
						<h4> 52 % </h4>
					</div>
				</div>
				<div class="span2">
					<h1 class="vs">VS</h1>
					<h4>{{b.battleStyle}}</h4>
				</div>
				<div class="span5">
					<div class="photo">
						<img class="img-large-f" src="uploads/{{b.battlee.profileImagePath}}"/>
						<img class="img-icon" src="assets/app/images/5.png"/>
						<h3 class="photo-label">{{b.battlee.username}}</h3>
						<h4> 48 % </h4>
					</div>
				</div>
			</div> <!-- /row-fluid -->
		</div>
	</div><!-- /banner -->

	<div class="well">
		{{#if canAdd}}
		<div class="box">
			<p class="lead">Add a new battle shred</p>
			<p><input type="file" id="guitarFileId" title="foo"></p>
		</div>
		{{/if}}

		{{#each b.battleRounds}}
		<div class="row-fluid">
			<div class="span5">
				<video class="video-js vjs-default-skin battle-video" controls>
					<source src="uploads/23shred2.mp4" type='video/mp4'>
				</video>
				<div class="underShredImage">
					<div class="row">
						<div class="span6">
							<p>Added on: 24.2.2013 </p>
							<p>Rating: 49 </p>
						</div>
						<div class="span6">
							<p>Views: 20</p>
							<p>Raters: 120</p>
						</div>
					</div>
				</div>

				<div class="span12">
					<em>You're going down!</em>
				</div>

					<div class="span12 shred-video">
						<p class="text-left">Rate it! 
							<input type="range" name="Rating" min="1" max="10">					
							<button class="rateBtn btn btn-small btn-inverse" id="rate-er-{{@index}}">Rate</button></p>
							<ul>
								<div class="commentsList">
									<li>
										<textarea rows="2" autofocus id="commentText" placeholder="Leave a comment!"></textarea>
									</li>
									{{#each shredComments}}
									<li class="comments">
										<a> <small> {{this.commenterName}} <span>{{this.timeCreated}}</span></small></a>
										<p>{{this.text}}</p>
									</li>
									{{/each}}
									<li class="comments">
										<a> <small> Finn Tore <span>20-10-2013</span></small></a>
										<p>Very very Nice !! Soo fast </p>
									</li>
									<li class="comments">
										<a> <small> Arne Skien <span>20-10-2013</span></small></a>
										<p>Super duper.</p>
									</li>
									<li class="comments">
										<a> <small> Johan Silver <span>20-10-2013</span></small></a>
										<p>hei dei </p>
									</li>
									<li class="comments">
										<a> <small> Name of me<span>20-10-2013</span></small></a>
										<p>hei dei seg på deg ei jo meg timeg timeg timeg timeg ti</p>
									</li>
									<li class="comments">
										<a> <small> Name of me<span>20-10-2013</span></small></a>
										<p>hei dei smeg tieg på deg ei jo meg ti</p>
									</li>
									<li class="comments">
										<a> <small> Name of me<span>20-10-2013</span></small></a>
										<p>hei dei meg timeg tiseg på deg ei jo meg ti</p>
									</li>
								</div>
							</ul>
						</div>
					</div> <!-- /span 5 -->

					<div class="span2">
						<h1 class="round">Round<br>1/5</h1>
						<i class="icon-chevron-left icon-4x"></i>
						<i class="icon-chevron-right icon-4x"></i>
					</div>

					<div class="span5">
						{{#if this.battleesShred}}
						<video class="video-js vjs-default-skin battle-video" controls>
							<source src="uploads/pres.mp4" type='video/mp4'>
							</video>
							<div class="underShredImage">
								<div class="row">
									<div class="span6">
										<p>Added on: 23.2.2013 </p>
										<p>Rating: 450 </p>
									</div>
									<div class="span6">
										<p>Views: 22</p>
										<p>Raters: 122</p>
									</div>
								</div>
							</div>
							<div class="span12">
								<em>Taste my SHRED-WRATH yo!</em>
							</div>

							<div class="span12 shred-video">
								<p class="text-left">Rate it! 
									<input type="range" name="Rating" min="1" max="10">					
									<button class="rateBtn btn btn-small btn-inverse">Rate</button></p>
								<ul>
									<div class="commentsList">
										<li>
											<textarea rows="2" autofocus placeholder="Leave a comment!"></textarea>
										</li>
										<li class="comments">
											<a> <small>Slasher <span>20-10-2013</span></small></a>
											<p>Very skilled!</p>
										</li>
									</div>
								</ul>
							</div>
							{{/if}}
						</div> <!-- /span5 -->
					</div> <!-- /row-fluid -->
				{{/each}}
			</div> <!-- /well -->
		</div> <!-- /battle -->
