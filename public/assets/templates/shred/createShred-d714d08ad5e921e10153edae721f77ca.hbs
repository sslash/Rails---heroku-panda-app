<div class="modal hide fade" id="createShred">

	<div class="modal-header">
		{{! <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button> }}
		<img src="images/icons/pick-icon-30.png" class="close" data-dismiss="modal" aria-hidden="true">
		<h3 class="lead">Create A Shred</h3>
	</div>


	<div class="modal-body">
		<div id="metaRegion">
				<input class="input-xlarge shredTitle" type="text" placeholder="Shred Title" autofocus>
			<span class="error-msg"></span>

			<div class="row-fluid">
				<div class="span4">
					<img src="images/icons/guitar-icon-30.png" class="icon"/>
					<input type="text" placeholder="Guitar" class="input-xsmall" id="guitarInput"/>
				</div> <!-- /span4 -->

				<div class="span4">
					{{! <i class="icon-bolt icon-2x"></i> }}
					<img src="images/icons/amp-icon-32.png" class="icon"/>
					<input type="text" placeholder="Amplifier" class="input-xsmall" id="ampInput"/>
				</div> <!-- /span4 -->

				<div class="span4">
					<select class="span10" id="categoryInput">
                		<option selected value="default">Category</option>
                		<option>Metal</option>
                		<option>Rock</option>
                		<option>Pop</option>
                		<option>Blues</option>
                		<option>Jazz</option>
                		<option>Country</option>
                		<option>R&B</option>
                		<option>Bluegrass</option>
                		<option>Fusion</option>
                		<option>Classical</option>
                		<option>Tags</option>
              </select>


				</div> <!-- /span4 -->
			</div><!-- /row -->

			<div class="row-fluid">

				<div class="span6 leftside">
					<label class="text-error" id="addImageWarning"></label>
						<div class="photo">
							<div id="shred_drop_zone">
								<img id="uploadShredThmb"class= "thumbnail" src="assets/images/guitarplayer.jpg">
								<label class="label label-inverse photo-label one-line">Drop The File Here</label>

								<div class="row-fluid">
									<form action="/panda/authorize_upload" id="new_video" method="POST">

										<input type="hidden" name="panda_video_id"/>

										<div id="browse-files" class="btn btn-primary btn-success">Choose file</div>

									</form>
								</div>
								{{!-- <div class="orAddFile">
									<span>Or click here</span><input type="file" id="addShredFile"></div> --}}
							</div>
						</div>
					<div id="vidThumb"></div>

				</div> <!-- /span6 -->

				<div class="span6 rightside">

					<div class="shred-meta">
						<textarea class="span12" id="descriptionInput" placeholder="Describe Your Shred" rows="3"></textarea>
						<div class="button-shiet">
							<i class="icon-tags" title="Add Category"></i>

							<i class="icon-music" id="popoverTags" title="Add Tags" data-toggle="popover"
								data-placement="bottom"></i>


							<i class="icon-microphone" title="Set Location"></i>
						</div>
					</div>			

					<a class="btn btn-primary add-tabs-btn" href="#">
	  					<i class="icon-music"></i> Add Tabs</a>

				</div> <!-- /span6 -->
			</div><!-- /row -->
		</div> <!-- /meta-region -->
		<section id="tabsRegion"></section>
	</div>	<!-- /modal-body-->

	<div class="modal-footer">
		<div class="pull-right">
			<span class="icon-stack">
          		<i class="icon-circle icon-stack-base"></i>
          		<i class="icon-twitter icon-light"></i>
        	</span>
        	<span class="icon-stack">
          		<i class="icon-circle icon-stack-base"></i>
          		<i class="icon-facebook icon-light"></i>
        	</span>
        	<span class="icon-stack">
          		<i class="icon-circle icon-stack-base"></i>
          		<i class="icon-google-plus icon-light"></i>
        	</span>

		</div>
		<button class="btn btn-danger submit">Finish</button>
	</div>
</div>




